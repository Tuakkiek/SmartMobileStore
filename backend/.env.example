# Database
MONGODB_CONNECTIONSTRING=your_mongodb_connection_string_here

# Server
PORT=5000
NODE_ENV=development
OMNICHANNEL_DEBUG=false
OMNICHANNEL_MONITORING_ENABLED=true
OMNICHANNEL_ROLLOUT_MODE=full
OMNICHANNEL_ROLLOUT_PERCENT=100
OMNICHANNEL_INTERNAL_ROLES=ADMIN,PRODUCT_MANAGER,ORDER_MANAGER,WAREHOUSE_MANAGER,POS_STAFF,CASHIER,WAREHOUSE_STAFF,SHIPPER
OMNICHANNEL_INTERNAL_USER_IDS=
OMNICHANNEL_ROLLOUT_SALT=omnichannel-rollout-v1

# JWT
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=7d

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# VNPay
VNP_TMN_CODE=your_tmn_code_from_vnpay
VNP_HASH_SECRET=your_hash_secret_from_vnpay
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=http://localhost:5173/payment/vnpay/return
VNP_IPN_URL=http://localhost:5000/api/payment/vnpay/ipn

# OMS phase 5
ORDER_NOTIFICATIONS_ENABLED=true
CARRIER_WEBHOOK_TOKEN=replace_with_strong_random_token

# Omnichannel UAT Runner (Step 4)
UAT_API_BASE_URL=http://localhost:5000/api
UAT_ORDER_QTY=1
UAT_AUTO_CREATE_USERS=true
UAT_FORCE_VNPAY_EXPIRY_CHECK=false
# Optional: use existing users instead of auto-created users
UAT_CUSTOMER_PHONE=
UAT_CUSTOMER_PASSWORD=
UAT_MANAGER_PHONE=
UAT_MANAGER_PASSWORD=
# Optional password for auto-created users (must satisfy backend password policy)
UAT_TEST_PASSWORD=Aa!123456
